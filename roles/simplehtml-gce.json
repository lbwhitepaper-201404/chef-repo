{
  "name": "simplehtml-gce",
  "default_attributes": {
    "cloud_lb_service": {
      "type": "gce",
      "load_balancer": "default",
      "username": "not used",
      "password": "base64 encoded tar file of ~/.config/gcloud",
      "terminate_on_detach": true
    },
    "google_cloud": {
      "auth": {
        "account": "developers email address"
      },
      "lb": {
        "ip": "the lb's public ip"
      }
    },
    "rsc_google_cloud": {
      "instance_id": "env:INSTANCE_ID, but really unused in this role",
      "datacenter": "env:DATACENTER, but really unused in this role"
    }
  },
  "run_list": [
    "recipe[byocm-chef::deserialize]",
    "recipe[ephemeral_lvm::default]",
    "recipe[rs-base::default]",
    "recipe[ohai-private-ipaddress]",
    "recipe[simplehtml-webserver]",
    "recipe[cloud_lb_service::default]",
    "recipe[cloud_lb_service::attach]"
  ]
}
